<div class="container">
  <h1>Update Task</h1>
  <%# make a form to post to the create action in controller %>
  <%= form_for(@task) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.label :completed%>
    <%= f.check_box :completed %>
    <%= f.submit %>
  <% end %>
  <%= link_to "Back", task_path%>
</div>
